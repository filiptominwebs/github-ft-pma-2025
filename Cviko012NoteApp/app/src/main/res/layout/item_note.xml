<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <!-- Texty vlevo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNoteId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: 1"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Název poznámky"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvNoteContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ukázkový obsah..."
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/tvNoteCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategorie"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="italic"/>
    </LinearLayout>

    <!-- EDIT icon -->
    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="6dp"
        android:src="@drawable/baseline_edit_24"
        android:contentDescription="Upravit poznámku"
        android:layout_marginEnd="12dp"/>

    <!-- DELETE icon -->
    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="6dp"
        android:src="@drawable/baseline_delete_24"
        app:tint="#F44336"
        android:contentDescription="Smazat poznámku" />

</LinearLayout>